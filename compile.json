{
  "$schema": "https://qooxdoo.org/schema/compile-1-0-0.json",
  "targets": [
    {
      "type": "source",
      "outputPath": "output/source-browser",
      "bundle": {
        "include": "qx.*"
      },
      "application-types": [
        "browser"
      ],
      "addCreatedAt": true,
      "environment": {
        "bcp.target": "source",
        "bcpClientPath": "/../../../"
      },
      "babelOptions": {
        "targets": {
          "edge": "18",
          "chrome": "79",
          "firefox": "72"
        }
      }
    },
    {
      "type": "build",
      "outputPath": "output/build-browser",
      "addCreatedAt": true,
      "deployPath": "deploy",
      "application-types": [
        "browser"
      ],
      "environment": {
        "bcp.target": "build",
        "bcpClientPath": "/../"
      }
    },
    {
      "type": "source",
      "outputPath": "output/source-node",
      "bundle": {
        "include": "qx.*"
      },
      "application-types": [
        "node"
      ],
      "addCreatedAt": true,
      "environment": {
        "bcp.target": "source",
        "bcpClientPath": "/../../../"
      },
      "babelOptions": {
        "targets": "node >= 11"
      }
    },
    {
      "type": "build",
      "outputPath": "output/build-node",
      "addCreatedAt": true,
      "deployPath": "deploy",
      "application-types": [
        "node"
      ],
      "environment": {
        "bcp.target": "build",
        "bcpClientPath": "/../"
      },
      "babelOptions": {
        "targets": "node >= 11"
      }
    }
  ],
  "defaultTarget": "source",
  "locales": [
    "en"
  ],
  "applications": [
    {
      "class": "bcp.client.Client",
      "theme": "bcp.client.theme.Theme",
      "name": "bcp.client",
      "type": "browser"
    },
    {
      "class": "bcp.server.Server",
      "theme": "",
      "name": "bcp.server",
      "type": "node",
      "include": [
        "qx.core.BaseInit"
      ],
      "exclude": [
        "qx.bom.Selector",
        "qx.bom.client.Html",
        "qx.event.handler.Pointer",
        "qx.event.handler.Gesture",
        "qx.event.handler.PointerCore"
      ]
    }
  ],
  "libraries": [
    "../../qxl.dialog.git",
    "../../incubator.qx.io.jsonrpc.git",
    "."
  ],
  "eslintConfig": {
    "extends": [
      "@qooxdoo/qx/browser",
      "@qooxdoo/qx",
      "@qooxdoo/jsdoc-disable"
    ]
  }
}
